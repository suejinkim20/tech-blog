{{#each posts as |post|}}
    <div class="card">
        <div class="card-header">
            <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
        </div>
        <div class="card-body">
            <p>by: {{post.user.username}}</p>
            <p>{{post.createdAt}}</p>
            <p>{{post.body}}</p>
        </div>
    </div>
{{/each}}